<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record model="ir.ui.view" id="view_wizard_referral_gift">
            <field name="name">free.products.historic.simplified.form</field>
            <field name="model">free.products.historic</field>
            <field name="arch" type="xml">
                <form string="Regalos">
                    <group>
                        <field name="product_id"/>
                        <field name="uds"/>
                        <field name="discount" readonly="1"/>
                    </group>
                </form>
                <footer>
                    <button string="Guardar" class="btn-primary" special="save"/>
                    <button string="Cancelar" class="btn-default" special="cancel"/>
                </footer>
            </field>
        </record>
    </data>
</odoo>